# Create tcsh release tar.gz and patch files.
#
# 20050303  Kimmo Suominen
#
REPOSITORY=/src/pub
#
if [ $# -ne 3 ]
then
    echo "Usage: $0 major minor beta" 1>&2
    exit 1
fi
#
umask 022
#
WRKDIR=`mktemp -d -t tcsh`
#
if [ ! -d "${WRKDIR}" ]
then
    echo "Creating work directory failed!" 1>&2
    exit 1
fi
#
cd ${WRKDIR} || exit 1
#
cleanit()
{
    (cd tcsh && rm -f \
	Announce* \
	Copyright \
	MAKERELEASE \
	Makefile.ADMIN \
	RELEASE-PROCEDURE \
    )
    chmod -R u=rwX,go=rX tcsh
}
#
TagA=`printf "TCSH%d_%02d_%02d" "${1}" "${2}" "${3}"`
VerA=`printf "%d.%02d.%02d" "${1}" "${2}" "${3}"`
#
echo "Checking out ${TagA}"
cvs -d ${REPOSITORY} -q export -r "${TagA}" tcsh > /dev/null
cleanit
mv tcsh "tcsh-${VerA}"
echo "Creating tarball"
tar -cf "tcsh-${VerA}.tar" "tcsh-${VerA}"
gzip -9 "tcsh-${VerA}.tar"
#
if [ "${3}" -gt 0 ]
then
    prev=`expr "${3}" - 1`
    TagB=`printf "TCSH%d_%02d_%02d" "${1}" "${2}" "${prev}"`
    VerB=`printf "%d.%02d.%02d" "${1}" "${2}" "${prev}"`
    pfile=`printf "patch%d" "${3}"`
    echo "Checking out ${TagB}"
    cvs -d ${REPOSITORY} -q export -r "${TagB}" tcsh > /dev/null
    cleanit
    mv tcsh "tcsh-${VerB}"
    echo "Creating patch"
    diff -urN "tcsh-${VerB}" "tcsh-${VerA}" > "${pfile}"
    gzip -9 "${pfile}"
fi
#
echo ""
echo "${WRKDIR}:"
ls -l "tcsh-${VerA}.tar.gz"
if [ "${3}" -gt 0 ]
then
    ls -l "${pfile}.gz"
fi
